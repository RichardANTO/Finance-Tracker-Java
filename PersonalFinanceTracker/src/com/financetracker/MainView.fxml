<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.*?>

<SplitPane dividerPositions="0.25" prefHeight="750.0" prefWidth="1250.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.financetracker.Controller">
    <items>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;" minWidth="250" maxWidth="400">
            <Label text="PROJECT DATABASES" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;"/>
            <ListView fx:id="dbListView" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;"/>
            <VBox spacing="8">
                <Button text="ðŸ”„ Refresh List" onAction="#refreshDbList" maxWidth="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                <Button text="ðŸ—‘ DELETE SELECTED DB" onAction="#handleDeleteDB" maxWidth="Infinity" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>

        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 1 0;">
                <Button onAction="#handleGoBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" text="â¬… Exit" />
                <Separator orientation="VERTICAL" />
                <TextField fx:id="dbNameField" promptText="Enter DB Name" HBox.hgrow="ALWAYS" maxWidth="300"/>
                <Button onAction="#handleConnectDB" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Connect / Create" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" text="Disconnected" style="-fx-font-style: italic;" />
            </HBox>

            <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <tabs>
                    <Tab text="Dashboard &amp; Entry">
                        <HBox spacing="0" VBox.vgrow="ALWAYS">
                            <VBox spacing="25" style="-fx-background-color: white; -fx-padding: 35;" minWidth="450" maxWidth="500">
                                <Label text="New Transaction" style="-fx-font-size: 22; -fx-font-weight: bold;"/>
                                <GridPane vgap="20" hgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="35.0" halignment="RIGHT" />
                                        <ColumnConstraints percentWidth="65.0" hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <children>
                                        <Label text="Currency:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                                        <ComboBox fx:id="currencyBox" maxWidth="Infinity" prefHeight="40" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                                        <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                                        <TextField fx:id="amountField" promptText="0.00" prefHeight="40" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                        <Label text="Category:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                                        <VBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                            <ComboBox fx:id="categoryBox" onAction="#handleCategoryAction" promptText="Select..." maxWidth="Infinity" prefHeight="40"/>
                                            <TextField fx:id="otherCategoryField" promptText="Custom Category Name" visible="false" managed="false" prefHeight="40"/>
                                        </VBox>
                                        <Label text="Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                                        <DatePicker fx:id="datePicker" editable="false" maxWidth="Infinity" prefHeight="40" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                                    </children>
                                </GridPane>
                                <HBox spacing="20">
                                    <Button fx:id="addButton" disable="true" onAction="#handleAddTransaction" text="SAVE" maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="50" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Button onAction="#handleResetFields" text="RESET" maxWidth="Infinity" HBox.hgrow="ALWAYS" prefHeight="50" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                                </HBox>
                            </VBox>
                            <VBox style="-fx-background-color: #f8f9fa;" HBox.hgrow="ALWAYS" alignment="CENTER">
                                <PieChart fx:id="expenseChart" title="Transaction Distribution" VBox.vgrow="ALWAYS" />
                            </VBox>
                        </HBox>
                    </Tab>
                    <Tab text="History">
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                                <columns>
                                    <TableColumn fx:id="colDate" text="Date" />
                                    <TableColumn fx:id="colCategory" text="Category" />
                                    <TableColumn fx:id="colAmount" text="Amount" />
                                </columns>
                            </TableView>
                            <HBox spacing="15" alignment="CENTER_RIGHT">
                                <Button onAction="#handleDelete" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-padding: 10 20;" text="ðŸ—‘ Delete Entry" />
                                <Button onAction="#handleEdit" style="-fx-background-color: #f1c40f; -fx-text-fill: black; -fx-padding: 10 20;" text="âœ Edit Entry" />
                            </HBox>
                        </VBox>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </items>
</SplitPane>